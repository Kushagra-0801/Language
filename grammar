keyword = [import, fn, struct, let, mod, const]

PROGRAM     :=  IMPORT*
                ITEM*

IMPORT      := import PATH ;

PATH        := IDENT (::PATH)*

IDENT       := [a-zA-Z_][a-zA-Z0-9_]*

ITEM        := FUNCTION | STRUCT | MODULE | CONSTANT

FUNCTION    := fn IDENT (ARG,*) -> IDENT { STATEMENT* }

ARG         := IDENT : IDENT

STRUCT      := struct IDENT { ARG,* }

MODULE      := mod IDENT { PROGRAM }

CONSTANT    := const IDENT : IDENT = EXPR

EXPR        := # expression

STATEMENT   := BINDING | EXPR ;

BINDING     := let IDENT (: IDENT)? = EXPR
